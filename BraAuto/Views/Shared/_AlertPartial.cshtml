@using BraAuto.ViewModels.Helpers;
@using BraAuto.Resources;
@using BraAuto.Helpers.Extensions;

@{
    var alert = TempData[Global.AlertKey]?.ToString().DeserializeAlert() ?? null;
}

@if (alert != null)
{
    @if (alert.Type == AlertTypes.Info)
    {
        <div class="alert alert-info" role="alert">
            @alert.Text
        </div>
    }
    else if (alert.Type == AlertTypes.Warning)
    {
        <div class="alert alert-warning" role="alert">
            @alert.Text
        </div>
    }
}