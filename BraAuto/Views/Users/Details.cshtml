@model BraAuto.ViewModels.UserServiceDetailsModel
@inject IConfiguration Configuration

@{
    ViewBag.Title = Model.Name;
    var cloudinaryUrl = Configuration["Cloudinary:Url"] + Configuration["Cloudinary:AppName"] + "/";
}

<section class="details-hero spad set-bg" data-setbg="/img/blog/details/details-hero-bg.jpg">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-10">
                <div class="blog-details-hero-text">
                    <span class="label">@Model.Location</span>
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog-details-pic">
                    <img src="@(cloudinaryUrl + Model.PhotoUrl)" alt="">
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="blog-details-text">
                    <p>@Model.Description</p>
                </div>
                <div class="row list-info">
                    <div class="col-md-6 list-info-item">
                        <h5>Service Location</h5>
                        <ul>
                            <li><i class="fa fa-map-marker"></i><label asp-for="Location"></label>: @Model.Location</li>
                            <li><i class="fa fa-location-crosshairs"></i><label asp-for="SpecificLocation"></label>: @Model.SpecificLocation</li>
                        </ul>
                    </div>
                    <div class="col-md-6 list-info-item">
                        <h5>Owner Contacts</h5>
                        <ul>
                            <li><i class="fa fa-user"></i> <label asp-for="Name"></label>: @Model.Name</li>
                            <li><i class="fa fa-mobile"></i> <label asp-for="Mobile"></label>: @Model.Mobile</li>
                            <li><i class="fa-solid fa-envelop"></i> <label asp-for="Email"></label>: @Model.Email</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
